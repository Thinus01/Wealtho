<section class="LoginPage">
  <div class="LoginSplash">
    <ul class="LoginUl">
      <% unless controller_name == 'registrations' || controller_name == 'sessions' %>
        <% if current_user %>
        <% else %>
          <li class="LoginLi Glow"> <%= link_to "Log In", new_user_session_path %></li>
          <li class="LoginLi"> <%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</section>
