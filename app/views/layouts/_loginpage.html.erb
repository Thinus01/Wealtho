<section class="LoginPage">
  <div class="LoginSplash">
    <ul class="LoginUl">
      <% unless controller_name == 'registrations' || controller_name == 'sessions' %>
        <% if current_user %>
          <li class="LoginLi"> <%= link_to "Edit Account", edit_user_registration_path, class: "nav-link" %></li>
          <li class="LoginLi"> <%= button_to "Sign Out", destroy_user_session_path, method: :delete, class: "btn btn-small btn-primary mx-2" %></li>
        <% else %>
          <li class="LoginLi Glow"> <%= link_to "Log In", new_user_session_path %></li>
          <li class="LoginLi"> <%= link_to "Sign Up", new_user_registration_path %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
</section>
